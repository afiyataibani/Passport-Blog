<%- include('../partials/header') %>

<div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
          <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="card-title text-center pb-2">Edit Blog Page</h4>
              <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Edit Blog
                    </li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
          <!-- ============================================================== -->
          <!-- Start Page Content -->
          <!-- ============================================================== -->
          <div class="row">
            <div class="col-6">
              <div class="card">
                <form class="form-horizontal" method="post" action="">
                    <div class="card-body">
                      <h4 class="card-title pb-2">Edit Blog</h4>
        
                      <div class="form-group row">
                        <label for="title" class="col-md-2 control-label col-form-label">Title</label>
                        <div class="col-md-10">
                          <input 
                            type="text" 
                            class="form-control" 
                            id="title" 
                            name="title" 
                            value="<%= data.title %>" 
                            placeholder="Enter the title here" 
                          />
                          <input type="hidden" name="editId" value="<%= data.id %>">
                        </div>
                      </div>
        
                      <div class="form-group row">
                        <label for="content" class="col-md-2 control-label col-form-label">Content</label>
                        <div class="col-md-10">
                          <textarea 
                            name="content" 
                            class="form-control" 
                            id="content" 
                            rows="10" 
                            placeholder="Blog Content"
                          ><%= data.content %></textarea>
                        </div>
                      </div>
        
                      <div class="form-group row">
                        <label for="author" class="col-md-2 control-label col-form-label">Author</label>
                        <div class="col-md-10">
                          <input 
                            type="text" 
                            id="author" 
                            class="form-control" 
                            name="author" 
                            value="<%= data.author %>" 
                            placeholder="Enter Author" 
                          />
                        </div>
                      </div>
                    </div>
        
                    <div class="border-top">
                      <div class="card-body">
                        <button type="submit" class="btn btn-primary">Submit</button>
                      </div>
                    </div>
                  </form>
              </div>
            </div>
          </div>
          <!-- ============================================================== -->
          <!-- End PAge Content -->
          <!-- ============================================================== -->
          <!-- ============================================================== -->
          <!-- Right sidebar -->
          <!-- ============================================================== -->
          <!-- .right-sidebar -->
          <!-- ============================================================== -->
          <!-- End Right sidebar -->
          <!-- ============================================================== -->
        </div>
      </div>
<%- include('../partials/footer') %>